<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <Viewbox x:Key="ExplorerListViewIcon" x:Shared="False">
    <TextBlock Text="&#xE8FD;"
               FontFamily="Segoe MDL2 Assets" />
  </Viewbox>
  <Viewbox x:Key="GridViewIcon"
           x:Shared="False">
    <TextBlock Text="&#xF0E2;"
               FontFamily="Segoe MDL2 Assets" />
  </Viewbox>
  <Viewbox x:Key="DetailsViewIcon"
           x:Shared="False">
    <TextBlock Text="&#xE8FD;"
               FontFamily="Segoe MDL2 Assets" />
  </Viewbox>
  <Viewbox x:Key="TilesViewIcon"
           x:Shared="False">
    <TextBlock Text="&#xECA5;"
               FontFamily="Segoe MDL2 Assets" />
  </Viewbox>
  <Viewbox x:Key="TreeViewIcon"
           x:Shared="False"
           RenderTransformOrigin="0.5,0.5">
    <Viewbox.RenderTransform>
      <RotateTransform Angle="-90" />
    </Viewbox.RenderTransform>
    <TextBlock Text="&#xECAA;"
               FontFamily="Segoe MDL2 Assets" />
  </Viewbox>

</ResourceDictionary>